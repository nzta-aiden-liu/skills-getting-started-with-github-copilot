{
  "name": "Python 3 with MongoDB",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.13",
  "features": {
    "ghcr.io/devcontainers/features/mongodb:1": {
      "version": "latest"
    }
  },
  "forwardPorts": [8000, 27017],
  "postCreateCommand": "pip install -r requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "ms-python.python",
        "ms-python.debugpy"
      ]
    }
  }
}
